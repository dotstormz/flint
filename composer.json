{
    "name": "studionone/flint",
    "repositories": [
        "type": "vcs",
        "url": "https://bitbucket.org/StudioNoneDev/flint.git"
    ],
    "require": {
        "silex/silex": "~1.2",
        "twig/twig": "~1.18"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.x"
    },
    "autoload": {
        "psr-4": {
            "Flint\\": "src"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --configuration=tests/phpunit.xml tests/",
        "coverage": "./vendor/bin/phpunit --configuration=tests/phpunit.xml --coverage-html=tests/coverage tests/"
    }
}
