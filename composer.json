{
    "name": "studionone/flint",
    "version": "1.0.2",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/studionone/Flint.git"
        }
    ],
    "require": {
        "silex/silex": "~1.2",
        "twig/twig": "~1.18",
        "symfony/validator": "~2.6"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.1.0"
    },
    "autoload": {
        "psr-4": {
            "Flint\\": "src",
            "Flint\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --configuration=tests/phpunit.xml tests/",
        "coverage": "./vendor/bin/phpunit --configuration=tests/phpunit.xml --coverage-html=tests/coverage tests/"
    }
}
